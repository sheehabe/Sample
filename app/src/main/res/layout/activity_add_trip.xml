<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/violet"
    tools:context=".SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="openCamera"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/profileInfoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="back"
                android:backgroundTint="@color/white"
                android:background="@drawable/back" />
            <TextView
                android:id="@+id/accountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TRIP "
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30sp" />

        </LinearLayout>





        <TextView
            android:id="@+id/tourNameTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Name"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton">
            <ImageView
                android:id="@+id/busIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/bus2"/>

            <EditText
                android:id="@+id/tourNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:imeOptions="actionNext"
                android:hint="Tour Place"
                android:inputType="textEmailAddress"
                android:textAllCaps="false"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tourTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Location"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton">
            <ImageView
                android:id="@+id/noteIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/note"/>

            <EditText
                android:id="@+id/tourLocationET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:hint="Travelling Location"
                android:imeOptions="actionNext"
                android:textAllCaps="false" />

        </LinearLayout>
        <TextView
            android:id="@+id/budgetTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour Budget"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton">
            <ImageView
                android:id="@+id/budgetIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_monetization_on_black_24dp"/>

            <EditText
                android:id="@+id/tourBudgetET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Travelling Budget"
                android:imeOptions="actionNext"
                android:textAllCaps="false"
                />

        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Start Date"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton">

            <ImageView
                android:id="@+id/tourStartDateIV"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_date_range_black_24dp" />

            <TextView
                android:id="@+id/tourStartDateTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginRight="15dp"
                android:hint="Enter Your Journy Date"
                android:imeOptions="actionNext"
                android:textAllCaps="false" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tour End Date"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/roundedbutton">

            <ImageView
                android:id="@+id/tourEndDateIV"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_date_range_black_24dp" />

            <TextView
                android:id="@+id/tourEndDateTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:layout_marginRight="15dp"
                android:hint="Enter Your Journy End Date"
                android:textAllCaps="false" />

        </LinearLayout>


        <Button
            android:id="@+id/saveTrip"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton6"
            android:text="SAVE YOUR TRIP"
            android:textAllCaps="false"
            android:textColor="@color/parrot"
            android:layout_marginBottom="70dp"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>
</layout>